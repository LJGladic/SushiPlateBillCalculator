<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/totalBillLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/totalBillText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/total_bill"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totalBillCost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/start_bill"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plateColorVerticalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/yellowPlateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <Spinner
                android:id="@+id/yellowColorSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/color_spinner" />

            <EditText
                android:id="@+id/yellowPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/yellow_price" />

            <TextView
                android:id="@+id/yellowX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/multiply"
                android:textSize="18sp" />

            <Button
                android:id="@+id/yellowMinus"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="yellowMinusButton"
                android:text="@string/minus_button" />

            <EditText
                android:id="@+id/yellowNumberPlates"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/num_plates_start" />

            <Button
                android:id="@+id/yellowPlus"
                android:background="@drawable/button_half_pill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="yellowPlusButton"
                android:text="@string/plus_button" />

            <TextView
                android:id="@+id/yellowEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/equals"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yellowPlateTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/start_bill"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/start_bill"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/greenPlateRow"
